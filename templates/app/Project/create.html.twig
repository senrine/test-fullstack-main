{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-col w-full">

        <h1 class="text-2xl font-bold text-center mb-10">Créer un nouveau projet</h1>
        <div class="w-[30%] mx-auto">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="form-group">
                {{ form_label(form.address, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.address) }}
            </div>
            <div class="form-group">
                {{ form_label(form.dateStart, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateStart, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateStart) }}
            </div>
            <div class="form-group">
                {{ form_label(form.dateEnd, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateEnd, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateEnd) }}
            </div>
            {{ form_row(form.submit, {'attr': {'class': 'form-submit'}}) }}

            {{ form_end(form) }}
        </div>
        <a class="back-link" href="{{ path('app_Project_list') }}">< Retour à la liste</a>

    </div>
{% endblock %}
