{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex justify-end">
        <a class="create-link mr-4" href="{{ path('app_Clocking_create_collaborator') }}">Je suis collaborateur</a>
        <a class="create-link" href="{{ path('app_Clocking_create_manager') }}">Je suis chef de projet</a>
    </div>
    <table>
        <thead>
            <tr>
                <td>{{ 'entity.Clocking.date'|trans }}</td>
                <td>{{ 'entity.Clocking.clockingUser'|trans }}</td>
                <td>{{ 'entity.Clocking.clockingDetails'|trans }}</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            {% for clocking in clockings %}
                <tr>
                    <td>{{ clocking.date|date }}</td>
                    <td>{{ clocking.clockingUser.lastName }} {{ clocking.clockingUser.firstName }}</td>
                    <td>
                        <ul>
                            {% for clockingDetail in clocking.clockingDetails %}
                                <li>{{ clockingDetail.project.name }} : {{ clockingDetail.duration }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>
                        <a href="{{ path('app_Clocking_delete', {id: clocking.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
